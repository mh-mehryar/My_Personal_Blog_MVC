<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Blog_MVC</title>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Blog_MVC.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <span id="siteName">My Personal Blog</span>
    </header>
    <div class="container">
        @*This is Container*@
        <main role="main" class="pb-3">
            @*<div class="PostItem">Post Number 1</div>
            <div class="PostItem">Post Number 2</div>
            <div class="PostItem">Post Number 3</div>
            <div class="PostItem">Post Number 4</div>*@
            @RenderBody()
        </main>
    </div>
    @*<nav>this is Sidebar</nav>*@
    <nav>
       @* <a href="/">Main Page</a>
        <a href="/">Contact</a>*@
        @*<a asp-controller="Home" asp-action="Index">Main Page</a>
        <a asp-controller="Home" asp-action="Contact">Contact</a>*@
        @Html.Partial("_Navigation")
    </nav>
    <footer>
        Craeted By Asp Core 6 and Visual Studio 2022 
    </footer>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
